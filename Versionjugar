	for(i=1; i<=((tam*4)); i++)
	{
		if(i==discos-1)
		cout <<"T1";
		else if(i==((discos*2)+discos)-2)
		cout <<"T2";
		else if(i==(((discos*2)+discos)-3)+discos*2)
		cout <<"T3";
		else if(i==(((discos*2)+discos)-4)+discos*4)
		cout <<"T4";
		else 
		cout <<fondo;
		
	}
	cout<<endl;
	for(i=1; i<=((tam*4)+4); i++)
	cout <<fondo;
}
/*system("color f1");*/
system("color 71") ;
