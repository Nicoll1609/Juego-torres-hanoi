	for(i=1; i<=((tam*4)+3)+1; i++)
	      cout <<fondo;
	cout <<endl<<fondo;
	for(i=0; i<discos; i++)
	{
		for(j=0; j<4; j++)
		{
			if(j==0)
		     	matriz [i][j]=i+1;
