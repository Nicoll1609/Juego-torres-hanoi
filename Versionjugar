					moverdisco();
					
				}
				i=0;
			}
		}
		system("cls");
		for(i=1; i<=((tam*4)+3)+1; i++)
		    cout <<fondo;
		cout <<endl<<fondo;
		for(i=0; i<discos; i++)
		{
			for(j=0; j<4; j++)
			{
			
			for(k=1; k<=tam; k++)
			{
				tamdisco=matriz[i][j]+(matriz[i][j]-1);
